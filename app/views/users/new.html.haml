%div 利用者登録
= form_with(model: @user, local: true) do |f|
  = f.label :name
  = f.text_field :name
  = f.collection_select :group_id, @company.groups, :id, :name, prompt: "未選択"
  = f.label :hurigana
  = f.text_field :hurigana
  = f.label :image
  = f.file_field :image
  = f.label :gender
  = f.select :gender, User.genders.keys.to_a, {}
  = f.label :bitrhday
  = f.date_select :birthday, use_month_numbers: true,start_year: 1900, end_year: (Time.now.year - 50), default: Date.new(1900, 1, 1)
  = f.label :zipcode
  = f.
  = f.label :care_required
  = f.select :care_required, User.care_requireds.keys.to_a, {}
  = f.label :status
  = f.select :status, User.statuses.keys.to_a, {}
  = f.label :password
  = f.password_field :password
  = f.label :password_confirmation
  = f.password_field :password_confirmation
  = f.submit
