.wrapper
  .container
    .content
      .company-home
        .left
        -if logged_in_company?
          = render 'companies/side'
        .right
          - if logged_in_company?
            %div
              = link_to '登録情報を編集する', edit_user_path(@user)
          = link_to '記録を見る', user_posts_path(@user)
          - if logged_in_recorder?
            = link_to '記録を書く', new_user_post_path(@user)
          .user-page
            %h1 入居者情報
            .user-hurigana
              = @user.hurigana
            .user-name
              = @user.name
            %div= @user.image
            %div= @user.gender
            %div= "#{@user.birthday.year}""#{wareki(@user.birthday)}"
            %div= @user.zipcode
            %div= @user.street_address
            %div= @user.care_required
            %div= @user.status
            %div
              連絡先
              - if @families
                -@families.each_with_index do |f, i|
                  %h4 連絡先 #{i+1}
                  %div
                    = f.hurigana
                  %div
                    = f.name
                  %div
                    = f.phone
                  %div
                    = f.zipcode
                  %div
                    = f.street_address
                  %div
                    = f.relationship
                  %div
                    = f.information
            .contact
              - if logged_in_company?
                %label.contact-plus{for: 'contact'} 連絡先を追加する ➕
                %input.open{id: 'contact', type: 'checkbox'}
                .contact-form
                  %h1 連絡先を入力
                  .form
                    = form_with model:[@user, @family], local: true do |f|
                      .field.user-field
                        = f.label :name
                        = f.text_field :name, placeholder: '連絡者名を入力してください', class: 'input-area user-input'
                      .field.user-field
                        = f.label :hurigana
                        = f.text_field :hurigana, placeholder: 'フリガナを入力してください', class: 'input-area user-input'
                      .field.user-field
                        = f.label :phone
                        = f.text_field :phone, placeholder: '電話番号を入力してください', class: 'input-area user-input'
                      .field.user-field
                        = f.label :zipcode
                        = f.text_field :zipcode, placeholder: '郵便番号を入力してください', onkeyup: "AjaxZip3.zip2addr(this,'','addr10','addr10')", class: 'input-area user-input'
                      .field.user-field
                        = f.label :street_address
                        = f.text_field :street_address, placeholder: '住所を入力してください', name: "addr10", class: 'input-area user-input'
                      .field.user-field
                        = f.label :relationship
                        = f.text_field :relationship, placeholder: '続柄を入力してください', class: 'input-area user-input'
                      .field.user-field
                        = f.label :information
                        = f.text_field :information, placeholder: 'その他の情報を入力', class: 'input-area user-input'
                      .field.user-field
                        = f.submit class: 'submit-btn'

          - if logged_in_user?
            家族としてログイン中

