%div 利用者登録
= form_with(model: @user, local: true) do |f|
  = render "shared/error_messages", model: f.object
  .form
    = f.label :name
    = f.text_field :name, required: ""
  .form
    = f.label :hurigana
    = f.text_field :hurigana
  .form
    = f.label :group_id
    = f.collection_select :group_id, @company.groups, :id, :name, prompt: "未選択"
  .form
    = f.label :image
    = f.file_field :image
  .form
    = f.label :gender
    = f.select :gender, User.genders.keys.to_a, {}
  .form
    = f.label :birthday
    = f.date_select :birthday, use_month_numbers: true,start_year: 1900, end_year: (Time.now.year - 50), default: Date.new(1900, 1, 1)
  .form
    = f.label :zipcode
    = f.text_field :zipcode, onkeyup: "AjaxZip3.zip2addr(this,'','addr11','addr11')"
  .form
    = f.label :street_address
    = f.text_field :street_address, name: "addr11"
  .form
    = f.label :care_required
    = f.select :care_required, User.care_requireds.keys.to_a, {}
  .form
    = f.label :status
    = f.select :status, User.statuses.keys.to_a, {}
  - if action_name == 'new'
    .form
      = f.label :password
      = f.password_field :password, required: ""
    .form
      = f.label :password_confirmation
      = f.password_field :password_confirmation, required: ""
  .form
    = f.submit
