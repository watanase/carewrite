= render 'shared/header'
.container
  .company-home
    .left
      = render 'companies/side'
    .center
    .right
      %h1 ログイン
      .form
        = form_with model: @recorder, local: true do |f|
          - flash.each do |key, value|
            = content_tag :div, value, class: key
          .field
            = f.label :login_id, 'ログインID'
            = f.text_field :login_id, required: true, placeholder: 'ログインIDを入力してください', class: 'input-area'
          .field
            = f.label 'パスワード'
            = f.password_field :password, required: true, placeholder: 'パスワードを入力してください', class: 'input-area'
          .field.submit
            = f.submit '記録者としてログインする', class: 'submit-btn'
        = form_with model: @recorder, local: true do |f|
          =f.hidden_field :login_id, value: '7zm8fh0x'
          =f.hidden_field :password, value: '000000'
          =f.submit 'テストログイン', class: 'test-btn'
